---
layout: null
---
[
  {% for post in site.posts %}
    {
      "id": {{ forloop.index | jsonify }},
      "url": {{ post.url | jsonify }},
      "title": {{ post.title | jsonify }},
      "content": {{ post.content | strip_html | strip_newlines | truncate: 1000 | jsonify }},
      "excerpt": {{ post.excerpt | strip_html | strip_newlines | jsonify }},
      "date": {{ post.date | date: "%B %d, %Y" | jsonify }},
      "categories": {{ post.categories | jsonify }},
      "tags": {{ post.tags | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.pages.size > 0 and site.posts.size > 0 %},{% endif %}
  {% for page in site.pages %}
    {% unless page.exclude_from_search %}
      {
        "id": {{ forloop.index | plus: site.posts.size | jsonify }},
        "url": {{ page.url | jsonify }},
        "title": {{ page.title | jsonify }},
        "content": {{ page.content | strip_html | strip_newlines | truncate: 1000 | jsonify }},
        "excerpt": {{ page.excerpt | strip_html | strip_newlines | jsonify }},
        "date": {{ page.date | date: "%B %d, %Y" | jsonify }},
        "categories": [],
        "tags": []
      }{% unless forloop.last %},{% endunless %}
    {% endunless %}
  {% endfor %}
]